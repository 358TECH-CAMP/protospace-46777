<%= form_with model: @prototype, local: true do |f| %>
  <% if @prototype.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(@prototype.errors.count, "件のエラー") %>があります</h2>
      <ul>
        <% @prototype.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "プロトタイプの名称" %><br>
    <%= f.text_field :title, value: @prototype.title, class: "form__input" %>
  </div>

  <div class="field">
    <%= f.label :catch_copy, "キャッチコピー" %><br>
    <%= f.text_area :catch_copy, value: @prototype.catch_copy, class: "form__textarea" %>
  </div>

  <div class="field">
    <%= f.label :concept, "コンセプト" %><br>
    <%= f.text_area :concept, value: @prototype.concept, class: "form__textarea" %>
  </div>

  <div class="field">
    <%= f.label :image, "プロトタイプの画像" %><br>
    <%= f.file_field :image, class: "form__file" %>
        <% if @prototype.image.attached? %>
      <p>現在の画像:</p>
      <%= image_tag @prototype.image, class: "preview_image", width: 300 %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: "form__btn" %>
  </div>

<% end %>
